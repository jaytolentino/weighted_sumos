{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["frontend/components/*"],
      "lib/*": ["frontend/lib/*"],
      "hooks/*": ["frontend/hooks/*"],
      "images/*": ["app/assets/images/*"],
      "icons/*": ["app/assets/icons/*"],
    }
  },
  "include": [
    "frontend",
    "app/assets/images"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
